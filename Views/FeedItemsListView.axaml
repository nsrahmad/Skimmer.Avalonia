<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:Skimmer.Avalonia.Converters;assembly=Skimmer"
             xmlns:viewModels="clr-namespace:Skimmer.Core.ViewModels;assembly=Skimmer.Core"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="650"
             x:Class="Skimmer.Avalonia.Views.FeedItemsListView"
             x:DataType="viewModels:MainWindowViewModel">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <converter:DateConverter x:Key="DateConverter" />
    </UserControl.Resources>

    <ListBox ItemsSource="{Binding SelectedFeed.FeedItems}"
             SelectedItem="{Binding SelectedFeedItem}"
             Background="{DynamicResource CardBackgroundFillColorDefault}"
             SelectionMode="AlwaysSelected">
        <ListBox.Styles>
            <Style Selector="ListBoxItem TextBlock.isRead">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimary}" />
            </Style>
            <Style Selector="ListBoxItem TextBlock.isNotRead">
                <Setter Property="Foreground" Value="{DynamicResource AccentTextFillColorPrimaryBrush}" />
            </Style>
        </ListBox.Styles>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <DockPanel Margin="8">
                    <Label Content="{Binding LastUpdatedTime, Converter={StaticResource DateConverter}}"
                           FontSize="11"
                           Padding="0 8 0 0"
                           DockPanel.Dock="Bottom" />
                    <TextBlock Text="{Binding Title}"
                               Classes.isRead="{Binding IsRead}"
                               Classes.isNotRead="{Binding !IsRead}"
                               TextWrapping="Wrap" />
                </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>

</UserControl>
